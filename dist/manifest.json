{
  "name": "note",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "time pass",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "http://*/*", 
    "https://*/*",
    "contextMenus",
    "background",
    "notifications"
  ],
  "icons": {
      "512": "logo.png"
  },
  "browser_action": {
      "default_icon": "logo.png",
      "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self'; default-src 'self'",

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["./script/contentScript.js"],
      "run_at": "document_end"
    }
  ]
 ,
  "background":
    {
      "scripts":["./script/background.js"],
      "persistent": false
    }

  

}